@{
    ViewData["Title"] = "Sản phẩm của tôi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/market.css" asp-append-version="true" />
    <style>
        .manage-header {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 30px 30px;
        }
        .product-manage-card {
            background: white;
            border-radius: 15px;
            padding: 1rem;
            display: flex;
            gap: 1.5rem;
            margin-bottom: 1rem;
            border: 1px solid #e2e8f0;
            transition: all 0.2s;
        }
        .product-manage-card:hover {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }
        .manage-img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 10px;
        }
        .manage-info {
            flex: 1;
        }
        .manage-actions {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            justify-content: center;
        }
        .status-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
        }
        .status-available { background: #dcfce7; color: #166534; }
        .status-sold { background: #fee2e2; color: #991b1b; }
    </style>
}

<div class="manage-header">
    <div class="container text-center">
        <h1 class="fw-bold">Quản lý sản phẩm</h1>
        <p class="text-white-50">Xem, sửa và cập nhật trạng thái các sản phẩm đang đăng bán</p>
    </div>
</div>

<div class="container mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0 fw-bold">Danh sách của bạn</h2>
        <a href="/Market/Create" class="btn btn-primary"><i class="bi bi-plus-lg me-2"></i> Đăng sản phẩm mới</a>
    </div>

    <div id="productsList">
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    </div>

    <div id="paginationContainer" class="mt-5"></div>
</div>

@section Scripts {
<script src="~/js/pagination.js"></script>
<script>
    let currentPage = 1;

    async function loadMyProducts(page = 1) {
        currentPage = page;
        const list = document.getElementById('productsList');
        const paginationContainer = document.getElementById('paginationContainer');

        try {
            const res = await fetch(`/api/products/my-products?page=${page}&pageSize=10`);
            const data = await res.json();
            const products = data.items || [];
            const totalPages = data.totalPages || 1;

            if (products.length === 0) {
                list.innerHTML = `
                    <div class="text-center py-5 bg-light rounded-4">
                        <i class="bi bi-box-seam" style="font-size: 4rem; color: #cbd5e0;"></i>
                        <h4 class="mt-3">Bạn chưa đăng sản phẩm nào</h4>
                        <a href="/Market/Create" class="btn btn-primary mt-3">Đăng bán ngay</a>
                    </div>`;
            } else {
                list.innerHTML = products.map(p => `
                    <div class="product-manage-card">
                        <img src="${p.imageUrl || '/images/no-image.png'}" class="manage-img" alt="${escapeHtml(p.title)}">
                        <div class="manage-info">
                            <div class="d-flex align-items-center gap-2 mb-1">
                                <span class="status-badge ${p.status === 'Available' ? 'status-available' : 'status-sold'}">
                                    ${p.status === 'Available' ? 'Đang bán' : 'Đã bán'}
                                </span>
                                <small class="text-muted">${p.category}</small>
                            </div>
                            <h3 class="h5 fw-bold mb-1">${escapeHtml(p.title)}</h3>
                            <div class="text-danger fw-bold fs-5 mb-2">${formatPrice(p.price)}</div>
                            <div class="text-muted small">
                                <i class="bi bi-clock me-1"></i> Đăng ngày: ${new Date(p.createdAt).toLocaleDateString('vi-VN')}
                            </div>
                        </div>
                        <div class="manage-actions">
                            <a href="/Market/Details/${p.id}" class="btn btn-outline-secondary btn-sm">Xem chi tiết</a>
                            <a href="/Market/Edit/${p.id}" class="btn btn-outline-primary btn-sm">Chỉnh sửa</a>
                            <button onclick="deleteProduct(${p.id})" class="btn btn-outline-danger btn-sm">Xóa bài</button>
                        </div>
                    </div>
                `).join('');
            }

            renderPagination('paginationContainer', currentPage, totalPages, (newPage) => {
                loadMyProducts(newPage);
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });

        } catch (e) {
            list.innerHTML = '<p class="text-danger">Lỗi tải dữ liệu</p>';
        }
    }

    async function deleteProduct(id) {
        if (!confirm('Bạn có chắc chắn muốn xóa sản phẩm này? Thao tác này không thể hoàn tác.')) return;
        
        try {
            const res = await fetch(\`/api/products/\${id}\`, { method: 'DELETE' });
            if (res.ok) {
                loadMyProducts(currentPage);
            }
        } catch (e) {
            alert('Lỗi khi xóa sản phẩm');
        }
    }

    document.addEventListener('DOMContentLoaded', () => loadMyProducts(1));
</script>
}
