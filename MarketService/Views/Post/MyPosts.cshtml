@{
    ViewData["Title"] = "Bài viết của tôi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/post.css" asp-append-version="true" />
    <style>
        .manage-header {
            background: linear-gradient(135deg, #4338ca 0%, #312e81 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 30px 30px;
        }
        .post-manage-card {
            background: white;
            border-radius: 15px;
            padding: 1.25rem;
            margin-bottom: 1rem;
            border: 1px solid #e2e8f0;
            transition: all 0.2s;
        }
        .post-manage-card:hover {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
    </style>
}

<div class="manage-header">
    <div class="container text-center">
        <h1 class="fw-bold">Bài viết của bạn</h1>
        <p class="text-white-50">Quản lý các nội dung bạn đã chia sẻ với cộng đồng</p>
    </div>
</div>

<div class="container mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h4 mb-0 fw-bold">Tất cả bài viết</h2>
        <a href="/Post/Create" class="btn btn-primary"><i class="bi bi-pencil-square me-2"></i> Đăng bài mới</a>
    </div>

    <div id="postsList">
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    </div>

    <div id="paginationContainer" class="mt-5 pb-5"></div>
</div>

@section Scripts {
<script src="~/js/pagination.js"></script>
<script>
    let currentPage = 1;

    async function loadMyPosts(page = 1) {
        currentPage = page;
        const list = document.getElementById('postsList');
        const paginationContainer = document.getElementById('paginationContainer');

        try {
            const res = await fetch(`/api/posts/my-posts?page=${page}&pageSize=8`);
            const data = await res.json();
            const posts = data.items || [];
            const totalPages = data.totalPages || 1;

            if (posts.length === 0) {
                list.innerHTML = `
                    <div class="text-center py-5 bg-light rounded-4">
                        <i class="bi bi-chat-quote" style="font-size: 4rem; color: #cbd5e0;"></i>
                        <h4 class="mt-3">Bạn chưa có bài viết nào</h4>
                        <a href="/Post/Create" class="btn btn-primary mt-3">Đăng bài ngay</a>
                    </div>`;
                paginationContainer.innerHTML = '';
                return;
            }

            list.innerHTML = posts.map(p => `
                <div class="post-manage-card">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h3 class="h5 fw-bold mb-0">
                            <a href="/Post/Details/${p.id}" class="text-decoration-none text-dark">${escapeHtml(p.title)}</a>
                        </h3>
                        <div class="dropdown">
                            <button class="btn btn-link text-muted p-0" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Post/Edit/${p.id}"><i class="bi bi-pencil me-2"></i>Sửa</a></li>
                                <li><button class="dropdown-item text-danger" onclick="deletePost(${p.id})"><i class="bi bi-trash me-2"></i>Xóa</button></li>
                            </ul>
                        </div>
                    </div>
                    <p class="text-muted small mb-3">${escapeHtml(p.content.substring(0, 150))}${p.content.length > 150 ? '...' : ''}</p>
                    <div class="d-flex gap-4 text-muted small">
                        <span><i class="bi bi-heart me-1"></i> ${p.likesCount}</span>
                        <span><i class="bi bi-chat-text me-1"></i> ${p.commentsCount}</span>
                        <span><i class="bi bi-calendar-event me-1"></i> ${new Date(p.createdAt).toLocaleDateString('vi-VN')}</span>
                    </div>
                </div>
            `).join('');

            renderPagination('paginationContainer', currentPage, totalPages, (newPage) => {
                loadMyPosts(newPage);
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });

        } catch (e) {
            list.innerHTML = '<p class="text-danger">Lỗi tải dữ liệu</p>';
        }
    }

    async function deletePost(id) {
        if (!confirm('Xóa bài viết này?')) return;
        try {
            const res = await fetch(\`/api/posts/\${id}\`, { method: 'DELETE' });
            if (res.ok) loadMyPosts(currentPage);
        } catch (e) { alert('Lỗi khi xóa bài'); }
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    document.addEventListener('DOMContentLoaded', () => loadMyPosts(1));
</script>
}
