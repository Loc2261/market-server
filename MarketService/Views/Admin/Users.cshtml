@section Scripts {
<script src="~/js/pagination.js"></script>
<script>
    let allUsers = [];
    let currentPage = 1;
    let totalPages = 1;

    async function loadUsers(page = 1) {
        currentPage = page;
        const search = document.getElementById('userSearch').value;
        try {
            const res = await fetch(`/api/admin/users?page=${page}&pageSize=10&search=${encodeURIComponent(search)}`, { credentials: 'include' });
            if (!res.ok) throw new Error('API Error');

            const data = await res.json();
            
            // Be robust: check items, Items, or array itself
            allUsers = Array.isArray(data) ? data : (data.items || data.Items || []);
            totalPages = data.totalPages || data.TotalPages || 1;

            if (allUsers.length === 0) {
                document.getElementById('usersBody').innerHTML = '<tr><td colspan="6" class="text-center py-4 text-muted">Kh√¥ng t√¨m th·∫•y ng∆∞·ªùi d√πng n√†o</td></tr>';
            } else {
                renderUsers(allUsers);
            }
            
            renderPagination('paginationContainerUsers', currentPage, totalPages, (newPage) => {
                loadUsers(newPage);
            });
        } catch (e) {
            console.error(e);
            document.getElementById('usersBody').innerHTML = '<tr><td colspan="6" class="text-center py-4 text-danger">Kh√¥ng c√≥ quy·ªÅn truy c·∫≠p ho·∫∑c l·ªói k·∫øt n·ªëi. Vui l√≤ng ki·ªÉm tra quy·ªÅn Admin.</td></tr>';
        }
    }
    
    function renderUsers(users) {
        document.getElementById('usersBody').innerHTML = users.map(u => {
            const isRootAdmin = u.username === 'admin';
            return `
                <tr class="${isRootAdmin ? 'table-light' : ''}">
                    <td><span class="text-muted small">#${u.id}</span></td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" style="width: 35px; height: 35px; font-weight: bold;">
                                ${u.avatarUrl ? `<img src="${u.avatarUrl}" class="rounded-circle w-100 h-100" style="object-fit: cover;">` : u.username.charAt(0).toUpperCase()}
                            </div>
                            <div>
                                <div class="fw-bold">${escapeHtml(u.fullName || u.username)}</div>
                                <div class="text-muted small">&#64;${escapeHtml(u.username)}</div>
                            </div>
                        </div>
                    </td>
                    <td>${escapeHtml(u.email)}</td>
                    <td>
                        <span class="badge ${u.role === 'Admin' ? 'bg-light-danger' : 'bg-light-primary'} badge-admin">
                            ${u.role} ${isRootAdmin ? '<i class="bi bi-patch-check-fill ms-1" title="Root Admin"></i>' : ''}
                        </span>
                    </td>
                    <td class="text-muted small">${new Date(u.createdAt).toLocaleDateString('vi-VN')}</td>
                    <td class="text-end">
                        ${isRootAdmin ? `
                            <span class="badge bg-secondary badge-admin opacity-50">H·ªá th·ªëng</span>
                        ` : `
                            <div class="btn-group">
                                <button onclick="toggleRole(${u.id}, '${u.role}')" class="btn btn-outline-primary btn-sm btn-admin" title="${u.role === 'Admin' ? 'H·∫° quy·ªÅn' : 'N√¢ng Admin'}">
                                     <i class="bi ${u.role === 'Admin' ? 'bi-person-down' : 'bi-person-up'}"></i>
                                </button>
                                <button onclick="deleteUser(${u.id})" class="btn btn-outline-danger btn-sm btn-admin" title="X√≥a ng∆∞·ªùi d√πng">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        `}
                    </td>
                </tr>
            `;
        }).join('');
    }

    function filterUsers() {
        loadUsers(1);
    }
    
    async function toggleRole(id, currentRole) {
        const newRole = currentRole === 'Admin' ? 'User' : 'Admin';
        if (!confirm(`B·∫°n c√≥ ch·∫Øc mu·ªën ${newRole === 'Admin' ? 'N√¢ng' : 'H·∫°'} quy·ªÅn user n√†y?`)) return;
        
        try {
            const res = await fetch(`/api/admin/users/${id}/set-role`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                credentials: 'include',
                body: JSON.stringify({ role: newRole })
            });
            if (res.ok) {
                loadUsers();
            } else {
                alert('L·ªói: Thao t√°c b·ªã t·ª´ ch·ªëi');
            }
        } catch (e) {
            alert('L·ªói k·∫øt n·ªëi');
