@section Scripts {
<script src="~/js/pagination.js"></script>
<script>
    let categoryModal;
    let currentPage = 1;
    let totalPages = 1;

    async function loadCategories(page = 1) {
        currentPage = page;
        const search = document.getElementById('catSearch').value;
        const tbody = document.getElementById('categoriesTable');
        
        try {
            const res = await fetch(`/api/admin/categories?page=${page}&pageSize=10&search=${encodeURIComponent(search)}`, { credentials: 'include' });
            if (!res.ok) throw new Error('Auth error');

            const data = await res.json();
            
            // Handle both List and PagedResult
            const categories = Array.isArray(data) ? data : (data.items || data.Items || []);
            totalPages = data.totalPages || 1;
            
            if (categories.length === 0) {
                tbody.innerHTML = '<tr><td colspan="5" class="text-center py-4 text-muted">Ch∆∞a c√≥ danh m·ª•c n√†o</td></tr>';
            } else {

            tbody.innerHTML = categories.map(c => `
                <tr>
                    <td>
                        <div>
                            <div class="fw-bold">${escapeHtml(c.name)}</div>
                            <div class="text-muted small">/${c.slug}</div>
                        </div>
                    </td>
                    <td>
                        <span class="text-muted small">${escapeHtml(c.description || 'Kh√¥ng c√≥ m√¥ t·∫£')}</span>
                    </td>
                    <td>
                        <span class="badge bg-light-info text-dark border">${c.productCount} s·∫£n ph·∫©m</span>
                    </td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" ${c.isActive ? 'checked' : ''} onchange="toggleActive(${c.id})">
                        </div>
                    </td>
                    <td class="text-end">
                        <div class="btn-group">
                            <button class="btn btn-outline-primary btn-sm btn-admin" onclick="showEditModal(${JSON.stringify(c).replace(/"/g, '&quot;')})" title="S·ª≠a">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-outline-danger btn-sm btn-admin" onclick="deleteCategory(${c.id}, '${escapeHtml(c.name)}')" title="X√≥a">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `).join('');

            if (!Array.isArray(data)) {
                 renderPagination('paginationContainerCategories', currentPage, totalPages, (newPage) => {
                     loadCategories(newPage);
                 });
            }

        } catch (e) {
            console.error('Error loading categories:', e);
            tbody.innerHTML = '<tr><td colspan="5" class="text-center py-4 text-danger">Kh√¥ng th·ªÉ t·∫£i danh s√°ch danh m·ª•c ho·∫∑c b·∫°n kh√¥ng c√≥ quy·ªÅn Admin.</td></tr>';
        }
    }

    function showCreateModal() {
        document.getElementById('modalTitle').textContent = 'Th√™m danh m·ª•c';
        document.getElementById('categoryId').value = '';
        document.getElementById('catName').value = '';
        document.getElementById('catSlug').value = '';
        document.getElementById('catDescription').value = '';
        categoryModal.show();
    }

    function showEditModal(cat) {
        document.getElementById('modalTitle').textContent = 'S·ª≠a danh m·ª•c';
        document.getElementById('categoryId').value = cat.id;
        document.getElementById('catName').value = cat.name;
        document.getElementById('catSlug').value = cat.slug;
        document.getElementById('catDescription').value = cat.description || '';
        categoryModal.show();
    }


    async function handleCategorySubmit(e) {
        e.preventDefault();
        const id = document.getElementById('categoryId').value;
        const data = {
            name: document.getElementById('catName').value,
            slug: document.getElementById('catSlug').value,
            description: document.getElementById('catDescription').value
        };

        const btn = document.getElementById('btnSaveCategory');
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> ƒêang l∆∞u...';

        try {
            const url = id ? `/api/admin/categories/${id}` : '/api/admin/categories';
            const method = id ? 'PUT' : 'POST';
            
            const res = await fetch(url, {
                method: method,
                headers: { 'Content-Type': 'application/json' },
                credentials: 'include',
                body: JSON.stringify(data)
            });

            if (res.ok) {
                categoryModal.hide();
                loadCategories();
            } else {
                const err = await res.json();
                alert(err.message || 'C√≥ l·ªói x·∫£y ra khi l∆∞u danh m·ª•c');
            }
        } catch (e) {
            alert('L·ªói k·∫øt n·ªëi');
        } finally {
            btn.disabled = false;
            btn.innerHTML = 'L∆∞u thay ƒë·ªïi';
        }
    }

    async function toggleActive(id) {
        try {
            const res = await fetch(`/api/admin/categories/${id}/toggle-active`, { method: 'POST', credentials: 'include' });
            if (!res.ok) throw new Error();
        } catch (e) {
            alert('Kh√¥ng th·ªÉ c·∫≠p nh·∫≠t tr·∫°ng th√°i');
            loadCategories();
        }
    }

    async function deleteCategory(id, name) {
        if (!confirm(`B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a danh m·ª•c "${name}"? C√°c s·∫£n ph·∫©m thu·ªôc danh m·ª•c n√†y s·∫Ω m·∫•t li√™n k·∫øt.`)) return;

        try {
            const res = await fetch(`/api/admin/categories/${id}`, { method: 'DELETE', credentials: 'include' });
            if (res.ok) {
                loadCategories();
            } else {
                alert('Kh√¥ng th·ªÉ x√≥a danh m·ª•c n√†y');
            }
        } catch (e) {
            alert('L·ªói k·∫øt n·ªëi');
        }
    }

    document.addEventListener('DOMContentLoaded', () => {
        categoryModal = new bootstrap.Modal(document.getElementById('categoryModal'));
        loadCategories();
    });
</script>
}
